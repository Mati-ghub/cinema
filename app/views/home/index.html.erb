    font-size: 1rem;
    scroll-behavior: smooth;
    background: #202020;
}
    
    p, span {
        padding: 0;
        margin: 0;
    }
    
    .stars {
        padding-right: 25px
    }
    
    .stars span {
        padding-right: 4px;
        font-size: 12px;
    }
    
    .stars .checked {
        color: orange;
    }
    
    .arrow {
        border: 2px solid #fff; border-radius:50%; padding: 10px 14px; 
        transition: all .5s;
